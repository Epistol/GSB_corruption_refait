<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.mlebeau.gsb.Index">

    <Button
        android:id="@+id/new_form"
        android:layout_width="357dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:text="Nouvelle formation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-27dp" />

    <Button
        android:id="@+id/suivi_form"
        android:layout_width="353dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:text="Suivi de mes formation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_form"
        tools:layout_editor_absoluteX="-90dp" />

    <Button
        android:id="@+id/search_form"
        android:layout_width="358dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="Recherche formation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suivi_form"
        tools:layout_editor_absoluteX="-73dp" />

    <Button
        android:id="@+id/myform"
        android:layout_width="358dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:text="Mes inscriptions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_form"
        tools:layout_editor_absoluteX="-91dp" />
</android.support.constraint.ConstraintLayout>
